<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        />

    <GridLayout
        android:id="@+id/gridLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/id_dday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.3"
            android:gravity="left"
            android:text="D-??"
            android:textColor="#FF0000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/challenge_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="right"
            android:text="2021-01-12" />

        <TextView
            android:id="@+id/check_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="성공"
            android:textColor="#0000FF"
            android:textSize="11dp" />


    </GridLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1D000000"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/id_diary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="여기에 텍스트를 입력하세요"
        android:gravity="fill"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        />




</LinearLayout>